<div class="container">
  <div class="row">
    <div class="col">
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <%=link_to "My Images", @image, :class =>"btn btn-outline-primary me-md-2"%>  
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="form-group">
        <%=form_for @image, builder: CustomFormBuilder do |f|%>
        <%=f.form_error%>
        <%=f.label :description%><br>
        <%=f.text_field :description, class: 'form-control'%>
        <%=f.field_error :description%><br>
        <%=f.label :picture%><br>
        <%=f.file_field :picture%><br>
        <%=f.submit t('.send_button'), :class =>"btn btn-outline-primary"%>
        <%end%>
      </div>
    </div>
  </div>
</div>
